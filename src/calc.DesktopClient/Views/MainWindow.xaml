<Window x:Class="calc.DesktopClient.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:constants="clr-namespace:calc.Common.Infrastructure.Constants;assembly=calc.Common.Infrastructure"
    xmlns:gui="clr-namespace:calc.Common.Styles.Converters;assembly=calc.Common.Styles"
    xmlns:gui2="clr-namespace:calc.Common.Styles;assembly=calc.Common.Styles"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="525"
    Height="350"
    MinWidth="325"
    MinHeight="250"
    MaxWidth="525"
    MaxHeight="350"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Style="{DynamicResource MainWindowStyle}">
    <Grid Background="{gui2:ThemeResource ResourceKey=ContentBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ContentControl
            Margin="8"
            prism:RegionManager.RegionName="{x:Static constants:RegionNames.ToolbarRegion}" />
        <ContentControl
            Grid.Row="1"
            Margin="8"
            prism:RegionManager.RegionName="{x:Static constants:RegionNames.DisplayRegion}" />
        <ContentControl
            Grid.Row="2"
            Margin="8"
            prism:RegionManager.RegionName="{x:Static constants:RegionNames.KeysRegion}" />
    </Grid>
</Window>
